                <label asp-for="TypeAccount" class="control-label"></label>
                <select asp-for="TypeAccount" class="form-control"></select>
                <span asp-validation-for="TypeAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDate" class="control-label"></label>
                <input asp-for="GroupDate" class="form-control" />
                <span asp-validation-for="GroupDate" class="text-danger"></span>
            </div>
