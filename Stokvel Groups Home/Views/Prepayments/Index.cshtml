@model IEnumerable<Stokvel_Groups_Home.Models.Prepayment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrepaymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrepaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrepaymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrepaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrepaymentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrepaymentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrepaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
