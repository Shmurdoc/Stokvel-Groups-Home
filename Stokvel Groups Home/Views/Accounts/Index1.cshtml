@model IEnumerable<UserGroupMember>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- row -->

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Contacts</h2>
        </div>
    </div>
</div>
<!-- row -->

<nav aria-label="breadcrumb" class="bg-white rounded-3 p-3 mb-4">

    <a class="btn btn-outline-danger" asp-action="Create">Create New</a>


    <alerts></alerts>

</nav>
<!-- row -->
<div class="row column1">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Contacts</h2>
                </div>
            </div>
            <div class="full price_table padding_infor_info">

                <div class="row">
                    <div class="row d-flex justify-content-left align-items-center h-100">
                        @foreach (var item in Model.Where(x => x.GroupMembers.Account.Accepted == false).ToList())
                        {
                            <!-- column contact -->

                            <div class="col-md-12 col-xl-4 mt-4">

                                <div class="card" style="border-radius: 15px;">
                                    <div class="card-body text-center">
                                        <div class="mt-3 mb-4">
                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                                                 class="rounded-circle img-fluid" style="width: 100px;" />
                                        </div>
                                        <h4 class="mb-2">@Html.DisplayFor(modelItem => item.AccountUser.FirstName)  @Html.DisplayFor(modelItem => item.AccountUser.LastName)</h4>
                                        <p class="text-muted mb-4">
                                            Would Like To Join <span class="mx-2">|</span> @Html.DisplayFor(modelItem => item.GroupMembers.Group.GroupName)
                                        </p>
                                        <p class="mb-0 text-uppercase">
                                            @if (User.IsInRole("Manager"))
                                            {
                                                @using (Html.BeginForm("AccptedMembers", "Accounts", FormMethod.Get))
                                                {
                                                    @Html.Hidden("id", (object)item.GroupMembers.AccountId)
                                                    @Html.Hidden("groupName", (string)item.GroupMembers.Group.GroupName)
                                                    @Html.Hidden("accountType", (object)ViewBag.AccountType)
                                                    @Html.Hidden("groupId", (object)item.GroupMembers.GroupId)
                                                    @Html.Hidden("acceptStatus", (bool)true)
                                                    <button type="submit" class="btn btn-primary btn-rounded btn-lg">  Accept Member</button>
                                                }
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary btn-rounded btn-lg" asp-action="Details" asp-route-id="@item.GroupMembers.AccountId">Details</a>
                                            }
                                        </p>
                                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                                            <div>
                                                <p class="mb-2 h5">5</p>
                                                <p class="text-muted mb-0">Groups Joind</p>
                                                @if (User.IsInRole("Member") || User.IsInRole("Admin"))
                                                {

                                                }
                                                else
                                                {
                                                    <a asp-action="Details" asp-route-id="@item.GroupMembers.AccountId">Details</a>
                                                }
                                            </div>
                                            <div class="px-3">
                                                <p class="mb-2 h5">@Html.DisplayFor(modelItem => item.GroupMembers.AccountId)</p>
                                                <p class="text-muted mb-0">Member Id</p>
                                            </div>
                                            <div>
                                                <p class="mb-2 h5">Gold</p>
                                                <p class="text-muted mb-0">Account Status</p>
                                                @if (User.IsInRole("Manager"))
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.GroupMembers.AccountId">Delete</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end column contact blog -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>



<!-- row -->

<div class="row column4 graph">
    <div class="col-md-8">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Accepted Member List</h2>
                </div>
            </div>
            <div class="full progress_bar_inner">
                <div class="row">
                    <div class="col-md-12">
                        <div class="msg_section">
                            <div class="msg_list_main">

                                <ul class="msg_list">
                                    @foreach (var member in ViewBag.AccountIdList)
                                        @foreach (var item in Model.Where(x => x.GroupMembers.AccountId == member && x.GroupMembers.Account.Accepted == true))
                                        {
                                            <li>
                                                <span><img class="img-responsive" src="@Url.Content("~/images/layout_img/msg2.png")" alt="#" /></span>
                                                <span>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <span class="name_user">@Html.DisplayFor(modelItem => item.AccountUser.FirstName)  @Html.DisplayFor(modelItem => item.AccountUser.LastName)</span>
                                                            <span class="msg_user">Has Been Accepted</span>
                                                        </div>

                                                        <div class="col-md-8 pl-2 pt-2">

                                                            <p class="mb-0 text-uppercase">
                                                                @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                                                                {
                                                                    @using (Html.BeginForm("AccptedMembers", "Accounts", FormMethod.Get))
                                                                    {
                                                                        @Html.Hidden("id", (object)item.GroupMembers.AccountId)
                                                                        @Html.Hidden("groupName", (string)item.GroupMembers.Group.GroupName)
                                                                        @Html.Hidden("accountType", (object)ViewBag.AccountType)
                                                                        @Html.Hidden("groupId", (object)item.GroupMembers.GroupId)
                                                                        @Html.Hidden("acceptStatus", (bool)false)
                                                                        <button type="submit" class="btn btn-danger btn-rounded btn-lg "><i class="fa fa-sign-out"></i>  Remove Member</button>
                                                                    }



                                                                }
                                                                else if (item.AccountUser.Id != ViewBag.UserId)
                                                                {
                                                                    @using (Html.BeginForm("AccptedMembers", "Accounts", FormMethod.Get))
                                                                    {
                                                                        @Html.Hidden("id", (object)item.GroupMembers.AccountId)
                                                                        @Html.Hidden("groupName", (string)item.GroupMembers.Group.GroupName)
                                                                        @Html.Hidden("accountType", (object)ViewBag.AccountType)
                                                                        @Html.Hidden("groupId", (object)item.GroupMembers.GroupId)
                                                                        @Html.Hidden("acceptStatus", (bool)false)
                                                                        <button type="submit" class="btn btn-danger btn-rounded btn-lg "><i class="fa fa-sign-out"></i>  Remove Member</button>
                                                                    }
                                                                }
                                                            </p>
                                                        </div>

                                                    </div>
                                                </span>
                                            </li>
                                        }
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




