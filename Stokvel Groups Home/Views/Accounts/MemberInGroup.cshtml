                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                                 class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>
                        <h4 class="mb-2">@Html.DisplayFor(modelItem => item.AccountUser.FirstName)</h4>
                        <p class="text-muted mb-4">
                               
                                Group Name <span class="mx-2">|</span> <a href="#!">@Html.DisplayFor(modelItem => item.GroupMembers.Group.GroupName)</a>
                        </p>
                        <div class="mb-4 pb-2">
                                <h4> @Html.DisplayFor(modelItem => item.GroupMembers.Account.AccountId)</h4>
                        </div>
                        <button type="button" class="btn btn-primary btn-rounded btn-lg">
                            Message now
                        </button>
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                            <div>
                                    <a asp-action="Edit" asp-route-id="@item.GroupMembers.Account.AccountId">Edit</a> |
                                   
                            </div>
                            <div class="px-3">
                                    <a asp-action="Details" asp-route-id="@item.GroupMembers.Account.AccountId">Details</a> |
                                   
                            </div>
                            <div>
                                    <a asp-action="Delete" asp-route-id="@item.GroupMembers.Account.AccountId">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    }
</div>






