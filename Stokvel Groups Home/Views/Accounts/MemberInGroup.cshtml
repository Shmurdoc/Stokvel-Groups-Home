<div class="row column1">
    @for (int i = 0; i < ViewBag.GroupId.Count; i++)
    {
        @foreach (var item in Model.Where(x => x.GroupMembers.Group.GroupId == ViewBag.GroupId[i] && x.GroupMembers.Group.GroupName == ViewBag.GroupName[i] && x.GroupMembers.Group.TypeAccount == ViewBag.AccountType[i]))
    {
        @Html.HiddenFor(modelItem => item.GroupMembers.Account.Id)
        
    <div class="col-md-6 col-lg-4">
